<%= simple_form_for @volunteer, url: volunteer_path, remote: true do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <!-- NEED TO FIGURE OUT SKILLS -->
  <%= f.text_area :job_history %>
  <%= f.input :availability %>
  <%= f.input :location %>
  <%= f.input :linkedin_url %>
  <%= f.input :portfolio_links %>

  <%= f.association :skills, as: :check_boxes %>

  <%= f.button :submit, id: 'update_profile_button' %>
<% end %>
