<div id="logo">
  <%= link_to "Develop For Good", root_path, :class => "brand" %>
</div>

<div id="menu">
  <% if user_signed_in? %>
  <ul>
  	<li><%= link_to 'View Profile', "#" %></li>
  	<li><%= link_to 'Logout', destroy_user_session_path, :method => 'delete' %></li>
  </ul>
	<% else %>
  <ul>
  	<li><%= link_to 'Sign Up', new_user_registration_path %></li>
  	<li>
  		<%= link_to 'Sign In', new_user_session_path, :id => 'sign_in_button' %>
      <%= render "devise/sessions/sign_in" %>
  	</li>
  </ul>
	<% end %>
</div>
