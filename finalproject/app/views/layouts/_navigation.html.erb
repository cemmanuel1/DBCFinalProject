<div id="logo"><%= link_to "GeekSeek.me", root_path, :class => "brand" %></div>

<div id="menu"> <!-- start menu -->
  <%= link_to 'BROWSE PROJECTS', browse_projects_path  %>
  <% if user_signed_in? %>
    <ul>
      <% if current_user.organization? %>
        <li><%= link_to 'MY GEEKSEEK', organization_path  %></li>
      <% end %>
      <% if current_user.volunteer? %>
        <li><%= link_to 'MY GEEKSEEK', volunteer_path %></li>
      <% end %>
      <li><%= link_to 'LOGOUT', destroy_user_session_path, :method => 'delete' %></li>
    </ul>
  <% else %>
    <ul>
      <li>
        <%= link_to 'SIGN IN', "#sign_in_form", :id => 'sign_in_button', class: "fancybox" %>
        <%= render "devise/sessions/sign_in" %>
      </li>
    </ul>
  <% end %>
</div> <!-- end menu -->
