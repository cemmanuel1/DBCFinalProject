<div id="logo">
  <%= link_to "GeekSeek.me", root_path, :class => "brand" %>
</div>

<div id="menu">
  <li> <%= link_to 'Browse Projects', browse_projects_path  %>  </li>
  <% if user_signed_in? %>
    <ul>
      <% if current_user.organization? %>
        <li><%= link_to 'View Dashboard', organization_path  %></li>
      <% end %>

      <% if current_user.volunteer? %>
        <li><%= link_to 'View Dashboard', volunteer_path %></li>
      <% end %>

      <li><%= link_to 'Logout', destroy_user_session_path, :method => 'delete' %></li>
   </ul>

  <% else %>

    <ul>
      <li>
        <%= link_to 'Sign In', new_user_session_path, :id => 'sign_in_button' %>
        <%= render "devise/sessions/sign_in" %>
      </li>
    </ul>
  <% end %>
  
</div>
